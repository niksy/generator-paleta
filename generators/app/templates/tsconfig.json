{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["ESNext"<% if ( browserModule ) { %>, "DOM"<% } %>],
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"noEmit": true,
		"newLine": "lf",
		"strict": true,
		"noPropertyAccessFromIndexSignature": true,
		"noEmitOnError": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"checkJs": true<% if ( transpile && typescriptMode === 'full' ) { %>,
		"isolatedModules": true<% } %>
	},
	"include": ["<% if ( complexTranspile ) { %>src/<% } %>index.<%= extension || 'js' %>", "<% if ( complexTranspile ) { %>src/<% } %>lib/**/*.<%= extension || 'js' %>", "test/**/*.<%= extension || 'js' %>"]
}
